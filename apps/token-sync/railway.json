{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd ../.. && pnpm --filter=mantle-token-sync build"
  },
  "deploy": {
    "startCommand": "cd ../.. && pnpm --filter=mantle-token-sync start",
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 999999999
  }
}
